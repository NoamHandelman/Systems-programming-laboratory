{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C program",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-ansi",
                "-Wall",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiler task"
        }
    ]
}
